{% extends "assets/template.twig" %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Personal Calendar</h3>
            </div>
            <div class="card-body">

                {% if googleCalendarEmbedUrl %}
                    <div style="width:100%; height:80vh;">
                        <iframe
                            src="{{ googleCalendarEmbedUrl }}"
                            style="border:0"
                            width="100%"
                            height="100%"
                            frameborder="0"
                            scrolling="no">
                        </iframe>
                    </div>
                {% else %}
                    <div class="alert alert-warning">
                        No calendar configured.<br>
                        Please configure a Google Calendar Embed URL in
                        <a href="{{ CONFIG.ROOTURL }}/instances/calendarSettings.php">
                            Calendar Settings
                        </a>.
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
</div>
{% endblock %}